<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EVet.Views.BookAppointment"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BookAppointment">
    <VerticalStackLayout>
        <StackLayout Padding="20">
            <Label Text="Pet Name" />
            <Entry x:Name="PetNameEntry" Placeholder="Enter pet name" />

            <Label Text="Owner Name" />
            <Entry x:Name="OwnerNameEntry" Placeholder="Enter your name" />

            <Label Text="Appointment Date" />
            <DatePicker x:Name="AppointmentDatePicker" DateSelected="OnDateSelected" />
            <TimePicker x:Name="AppointmentTimePicker" />
            <Label
                x:Name="UnavailableTimesLabel"
                FontSize="16"
                Text=""
                TextColor="Red" />
            <Button Clicked="OnBookAppointmentClicked" Text="Book Appointment" />

            <ProgressBar x:Name="BookingProgressBar" IsVisible="False" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>