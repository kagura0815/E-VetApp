    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    Title=""
    NavigationPage.HasNavigationBar="False">
    <Grid Background="Transparent" BackgroundColor="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />


        </Grid.RowDefinitions>
        <VerticalStackLayout Grid.Row="0">

            <Frame
                Margin="0,0,0,0"
                BackgroundColor="#059212"
                HeightRequest="60"
                WidthRequest="500">
                <Label
                    Margin="145,-6,0,0"
                    FontSize="18"
                    Text="Select a Pet" />
            </Frame>
            <Frame
                Margin="-250,-50,0,15"
                BackgroundColor="White"
                CornerRadius="10"
                HeightRequest="40"
                WidthRequest="40">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Frame.GestureRecognizers>
                <Image
                    x:Name="mainimage"
                    Margin="0,15,0,15"
                    Aspect="Fill"
                    HeightRequest="40"
                    Source="addphoto.png"
                    WidthRequest="40" />
            </Frame>






            <BoxView StyleClass="Divider" />
            <!--  Pet Information Section  -->
            <ScrollView Grid.Row="1">
                <StackLayout Padding="10">
                    <Label x:Name="petNameLabel" Text="Pet Name" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="{Binding SelectedPet.Name}" />
                    <Image
                        x:Name="petImage"
                        HeightRequest="100"
                        Source="{Binding SelectedPet.ImageSource}"
                        WidthRequest="100" />

                    <Label x:Name="petGenderLabel" Text="Pet Gender" />
                    <Label
                        FontAttributes="Bold"
                        Text="Gender:"
                        TextColor="Black" />
                    <Label Text="{Binding SelectedPet.Gender}" TextColor="Black" />

                    <Label x:Name="petWeightLabel" Text="Pet Weight" />
                    <Label
                        FontAttributes="Bold"
                        Text="Weight:"
                        TextColor="Black" />
                    <Label Text="{Binding SelectedPet.Weight}" TextColor="Black" />

                    <Label x:Name="petBreedLabel" Text="Pet Breed" />
                    <Label
                        FontAttributes="Bold"
                        Text="Breed:"
                        TextColor="Black" />
                    <Label Text="{Binding SelectedPet.Breed}" TextColor="Black" />
                </StackLayout>
            </ScrollView>
