        <!--  Pet Information Section  -->



        <VerticalStackLayout
            Grid.Row="1"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="White"
            HorizontalOptions="FillAndExpand"
            Spacing="20"
            VerticalOptions="FillAndExpand"
            WidthRequest="361">



            <Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,-6,0,0"
                HeightRequest="250"
                StrokeShape="RoundRectangle 10"
                VerticalOptions="Center"
                WidthRequest="370">

                <Image
                    x:Name="petImage"
                    Grid.Row="0"
                    Margin="0,-10,0,0"
                    Aspect="AspectFill"
                    Source="{Binding Images}" />


            </Border>
            <ScrollView
                Grid.Row="1"
                Margin="0,80,0,0"
                HeightRequest="300"
                WidthRequest="360">
                <Grid
                    BackgroundColor="blue"
                    ColumnDefinitions="Auto,Auto"
                    RowDefinitions=" Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                    RowSpacing="5">
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="10"
                        FontAttributes="Bold"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Pet Information"
                        TextColor="black"
                        TextTransform="Uppercase"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Pet Name:"
                        TextColor="black"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        x:Name="petNameLabel"
                        Grid.Row="1"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="15"
                        LineBreakMode="TailTruncation"
                        Text="{Binding Name}"
                        TextColor="black" />



                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Gender:"
                        TextColor="black"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        x:Name="petGenderLabel"
                        Grid.Row="2"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="15"
                        LineBreakMode="TailTruncation"
                        Text="{Binding Gender}"
                        TextColor="black" />
                    <Label
                        Grid.Row="3"
                        Grid.Column="0"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Pet Type:"
                        TextColor="black"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        x:Name="petTypeLabel"
                        Grid.Row="3"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="15"
                        LineBreakMode="TailTruncation"
                        Text="{Binding PetType}"
                        TextColor="black" />
                    <Label
                        Grid.Row="4"
                        Grid.Column="0"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Breed:"
                        TextColor="black"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        Grid.Row="4"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="15"
                        LineBreakMode="TailTruncation"
                        Text="{Binding Breed}"
                        TextColor="black" />
                    <Label
                        Grid.Row="5"
                        Grid.Column="0"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Birthday:"
                        TextColor="black"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        Grid.Row="5"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="15"
                        LineBreakMode="TailTruncation"
                        Text="{Binding Birthday}"
                        TextColor="black" />



                    <Label
                        Grid.Row="7"
                        Grid.Column="0"
                        Margin="10"
                        FontAttributes="Bold"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Health Concern"
                        TextColor="black"
                        TextTransform="Uppercase"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        Grid.Row="8"
                        Grid.Column="0"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Allergies:"
                        TextColor="black"
                        VerticalOptions="CenterAndExpand" />

                    <Label
                        Grid.Row="8"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="15"
                        LineBreakMode="TailTruncation"
                        Text="{Binding Allergies}"
                        TextColor="black" />
                    <Label
                        Grid.Row="9"
                        Grid.Column="0"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Neutered:"
                        TextColor="black"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        Grid.Row="9"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="15"
                        LineBreakMode="TailTruncation"
                        Text="{Binding Neutered}"
                        TextColor="black" />
                    <Label
                        Grid.Row="10"
                        Grid.Column="0"
                        FontSize="15"
                        HorizontalOptions="Start"
                        Text="Weight:"
                        TextColor="black"
                        VerticalOptions="CenterAndExpand" />
                    <Label
                        Grid.Row="10"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="15"
                        LineBreakMode="TailTruncation"
                        Text="{Binding Weight}"
                        TextColor="black" />
                    <!--<Label
                        Grid.Row="11"
