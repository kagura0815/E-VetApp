        <StackLayout
            Grid.Row="2"
            BackgroundColor="#059212"
            WidthRequest="360">
            <Grid
                Margin="20,10,20,10"
                ColumnSpacing="100"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <ImageButton
                    Margin="-150,0,0,0"
                    BackgroundColor="Transparent"
                    Clicked="OnHomePageClick"
                    HeightRequest="20"
                    HorizontalOptions="Start"
                    Source="home.png" />

                <ImageButton
                    Margin="150,0,0,0"
