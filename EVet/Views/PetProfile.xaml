<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EVet.Views.PetProfile"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EVet.ViewModels"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    Title=""
    NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <local:PetProfileViewModel />
        <!--  Ensure you have the correct namespace for your ViewModel  -->
    </ContentPage.BindingContext>
    <Grid Background="Transparent" BackgroundColor="orange">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />



        </Grid.RowDefinitions>
        <VerticalStackLayout Grid.Row="0">


            <Frame
                Margin="0,0,0,0"
                BackgroundColor="Transparent"
                HeightRequest="60"
                WidthRequest="500">
                <Button
                    Grid.Column="0"
                    Margin="-180,-10,0,0"
                    BackgroundColor="Transparent"
                    Clicked="selectPet"
                    FontSize="18"
                    Text="Select a Pet"
                    TextColor="White"
                    TextTransform="Uppercase"
                    VerticalOptions="Start" />
            </Frame>
        </VerticalStackLayout>
